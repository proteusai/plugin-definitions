{
    "name": "OnBuddy",
    "description": "Automate OnBuddy actions",
    "events": [ "APP_INTEGRATION_CHAT_JOINED", "APP_INTEGRATION_MESSAGE_RECEIVED", "APP_INTEGRATION_ACTION_CALL" ],
    "isPublic": true,
    "orgId": "{{orgId}}",
    "scopes": [ "APP_INTEGRATION_CHAT_WRITE", "APP_INTEGRATION_MESSAGE_WRITE", "WORKFLOW_WRITE", "EXTERNAL_EVENT_WRITE" ],
    "tags": [ "OnBuddy" ],
    "type": "APP",
    "webhookUrl": "https://api-prd.onbuddy.ai/api/integrations/proteus/onbuddy/webhook",
    "actions": [{
        "name": "buddy.update",
        "title": "Update Buddy",
        "description": "Update your organization's AI buddy",
        "argsSchema": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string",
                    "description": "The display name of the buddy"
                },
                "personality": {
                    "type": "string",
                    "description": "The personality name of the buddy"
                }
            }
        },
        "returnSchema": {
            "type": "object",
            "properties": {
                "ok": {
                    "type": "boolean",
                    "description": "Determines if the operation failed or succeeded"
                },
                "message": {
                    "type": "string",
                    "description": "The error or success message of the operation"
                }
            }
        }
    }, {
        "name": "member.add",
        "title": "Add Member",
        "description": "Add a user as a member of this organization",
        "argsSchema": {
            "type": "object",
            "properties": {
                "first_name": {
                    "type": "string",
                    "description": "The first name of the member"
                },
                "last_name": {
                    "type": "string",
                    "description": "The last name of the member"
                },
                "email": {
                    "type": "string",
                    "description": "The email of the member"
                },
                "role": {
                    "type": "string",
                    "description": "The OnBuddy role (ADMIN, MEMBER, OWNER, EXTERNAL) of the member"
                },
                "slack_id": {
                    "type": "string",
                    "description": "The Slack ID of the member"
                }
            }
        },
        "returnSchema": {
            "type": "object",
            "properties": {
                "ok": {
                    "type": "boolean",
                    "description": "Determines if the operation failed or succeeded"
                },
                "message": {
                    "type": "string",
                    "description": "The error or success message of the operation"
                },
                "member": {
                    "type": "object",
                    "description": "The member who was just added",
                    "properties": {
                        "first_name": {
                            "type": "string",
                            "description": "The first name of the member"
                        },
                        "last_name": {
                            "type": "string",
                            "description": "The last name of the member"
                        },
                        "email": {
                            "type": "string",
                            "description": "The email of the member"
                        },
                        "role": {
                            "type": "string",
                            "description": "The OnBuddy role (ADMIN, MEMBER, OWNER, EXTERNAL) of the member"
                        },
                        "slack_id": {
                            "type": "string",
                            "description": "The Slack ID of the member"
                        }
                    }
                }
            }
        }
    }],
    "mcp": {
        "label": "Test OnBuddy MCP",
        "url": "https://mcp.deepwiki.com/mcp"
    }
}
